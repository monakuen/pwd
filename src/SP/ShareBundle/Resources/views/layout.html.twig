{% extends "::layout.html.twig" %}

{% block title %}
    Second Player
{% endblock %}

{% block body %}

    {# On définit un sous-titre commun à toutes les pages du bundle, par exemple #}
<header>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('sp_share_home') }}">Second Player</a>
            </div>
            <form class="navbar-form navbar-left" action="{{ path('sp_share_search') }}">
                <div class="form-group">
                    <input name="search-input" type="text" class="form-control" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default">Rechercher</button>
            </form>
            <ul class="nav navbar-nav navbar-right">
                {% if is_granted('ROLE_USER')%}
                    <li><a href="{{ path('sp_share_addAdvert') }}">Ajouter une annonce</a></li>
                    <li><a href="{{ path('sp_share_message') }}">Message</a></li>
                    <li><a href="{{ path('fos_user_security_logout') }}"><span class="glyphicon glyphicon-log-in"></span> Se déconnecter</a></li>
                {% else %}
                    <li><a href="{{ path('fos_user_registration_register') }}"><span class="glyphicon glyphicon-user"></span> S'enregistrer</a></li>
                    <li><a href="{{ path('fos_user_security_login') }}"><span class="glyphicon glyphicon-log-in"></span> Se connecter</a></li>
                {% endif %}
            </ul>
        </div>
    </nav>
</header>
    <div class="container">
        <div class="row">
            <div class="col-lg">
                <hr>

                {# On définit un nouveau bloc, que les vues du bundle pourront remplir #}
                {% block spshare_body %}
                {% endblock %}

            <footer class="page-footer blue center-on-small-only">
                <!--Copyright-->
                <div class="footer-copyright">
                    <div class="container-fluid">
                        © 2015 Copyright: <a href="#"> Camerlinckx Jerome </a>

                    </div>
                </div>
                <!--/.Copyright-->
            </footer>
        </div>
    </div>
</div>

    {% block javascripts %}
        {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    {% endblock %}
{% endblock %}